<% content_for(:page_styles) { %>
  <%= stylesheet_link_tag "pages/admin", "data-turbo-track": "reload" %>
<% } %>

<%= render "shared/admin_nav" %>

<main>
  <section class="admin-header">
    <h1>Управление категориями</h1>
    <%= link_to "Добавить категорию", new_admin_category_path, class: "btn btn-primary" %>
  </section>

  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="admin-products-table">
    <% if @categories.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Название</th>
            <th>Товаров в категории</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><strong><%= category.name %></strong></td>
              <td><span class="badge"><%= category.products.count %></span></td>
              <td class="actions">
                <%= link_to "Просмотр", admin_category_path(category), class: "btn btn-info" %>
                <%= link_to "Редактировать", edit_admin_category_path(category), class: "btn btn-warning" %>
                <%= link_to "Удалить", admin_category_path(category), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Вы уверены?" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty-state">
        <p>Нет категорий. <%= link_to "Добавить первую категорию", new_admin_category_path %></p>
      </div>
    <% end %>
  </div>
</main>

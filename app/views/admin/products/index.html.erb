<% content_for(:page_styles) { %>
  <%= stylesheet_link_tag "pages/admin", "data-turbo-track": "reload" %>
<% } %>

<%= render "shared/admin_nav" %>

<main>
  <section class="admin-header">
    <h1>Product Management</h1>
    <%= link_to "Add Product", new_admin_product_path, class: "btn btn-primary" %>
  </section>

  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="admin-products-table">
    <% if @products.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><strong><%= product.name %></strong></td>
              <td><%= product.category&.name || "No Category" %></td>
              <td class="price">$<%= product.price %></td>
              <td><%= product.quantity %></td>
              <td class="actions">
                <%= link_to "View", admin_product_path(product), class: "btn btn-info" %>
                <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-warning" %>
                <%= link_to "Delete", admin_product_path(product), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty-state">
        <p>No products. <%= link_to "Add first product", new_admin_product_path %></p>
      </div>
    <% end %>
  </div>
</main>

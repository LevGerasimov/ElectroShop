<header>
  <div class="top-bar">
    <div class="logo">ElectroShop</div>
    <div class="search">
      <%= form_with url: search_path, method: :get, local: true, class: "search-form" do |f| %>
        <%= f.text_field :q, placeholder: "Search products and categories...", class: "search-input" %>
        <%= f.submit "Search", class: "search-btn" %>
      <% end %>
    </div>
    <% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
<% else %>
  <%= link_to "Sign In", new_user_session_path, class: "nav-link" %> |
  <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
<% end %>
  </div>
</header>
<nav>
  <ul>
    <li><button class="catalog-btn" data-action="click->catalog#toggle">Catalog</button></li>
    <li><%= link_to "Home", root_path, class: "nav-link" %></li>
    <li><%= link_to "Contacts", contacts_path, class: "nav-link" %></li>
    <% if user_signed_in? %>
      <li><%= link_to "Admin", admin_products_path, class: "nav-link nav-link-admin" %></li>
    <% end %>
  </ul>
</nav>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ElectroShop – DNS Style Demo</title>
  <style>
    * { box-sizing: border-box; font-family: Arial, Helvetica, sans-serif; }
    body { margin: 0; background: #f5f5f5; color: #222; }

    /* Header */
    header {
      background: #1f9d55;
      color: #fff;
      padding: 12px 24px;
    }
    .top-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      max-width: 1200px;
      margin: auto;
    }
    .logo {
      font-size: 28px;
      font-weight: bold;
    }
    .search {
      flex: 1;
      margin: 0 20px;
    }
    .search input {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 4px;
    }
    .actions {
      font-size: 14px;
    }

    /* Navigation */
    nav {
      background: #ffffff;
      border-bottom: 1px solid #ddd;
    }
    nav ul {
      max-width: 1200px;
      margin: auto;
      padding: 0;
      list-style: none;
      display: flex;
      gap: 20px;
    }
    nav li {
      padding: 14px 0;
      cursor: pointer;
      font-weight: 600;
    }

    /* Main */
    main {
      max-width: 1200px;
      margin: 20px auto;
      padding: 0 16px;
    }

    .banner {
      background: linear-gradient(90deg, #1f9d55, #34d399);
      color: #fff;
      padding: 40px;
      border-radius: 8px;
      margin-bottom: 30px;
    }

    .products {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }

    .card {
      background: #fff;
      border-radius: 8px;
      padding: 16px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .card img {
      max-width: 100%;
      height: 140px;
      object-fit: contain;
      margin-bottom: 10px;
    }
    .card h3 {
      font-size: 15px;
      margin: 6px 0;
    }
    .price {
      font-size: 18px;
      font-weight: bold;
      margin: 8px 0;
    }
    .card button {
      background: #1f9d55;
      color: #fff;
      border: none;
      padding: 10px;
      border-radius: 4px;
      cursor: pointer;
    }

    /* Footer */
    footer {
      background: #222;
      color: #ccc;
      padding: 30px 20px;
      margin-top: 40px;
    }
    .footer-inner {
      max-width: 1200px;
      margin: auto;
      font-size: 14px;
    }

    # --------------
    .products {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
}

.product-card {
  border: 1px solid #ddd;
  padding: 16px;
  border-radius: 8px;
  background: #fff;
}

.product-card h2 {
  margin-top: 0;
}

.price {
  font-weight: bold;
}
  </style>
</head>
<body>


<main>
  <!-- Catalog page -->
  <section style="margin-bottom:24px;">
  <h1 style="font-size:28px;">Каталог товаров</h1>
</section>

  <div style="display:grid; grid-template-columns:1fr 260px; gap:20px;">
  <section class="products" id="products">
    

    <% @products.each do |product| %>
        <div class="card" data-name="<%= product.name %>" data-price="<%= product.price %>">
            <% if product.image.attached? %>
                <%= image_tag product.image, class: "product-image" %>
            <% end %>
            <h3><%= product.name %></h3>
            <div class="price">$<%= product.price %></div>
            <p> Количество: <%= product.quantity %> </p>
            <p class="description"><%= product.description %> </p>
            <button>В корзину</button>
        </div>
    <% end %>
    </section>

  <!-- Sorting sidebar -->
  <aside style="background:#fff; padding:16px; border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.08); height:fit-content;">
    <h3 style="margin-top:0;">Сортировка</h3>
    <select id="sort" onchange="sortProducts()" style="width:100%; padding:10px; border-radius:4px;">
      <option value="default">По умолчанию</option>
      <option value="price-asc">Цена: по возрастанию</option>
      <option value="price-desc">Цена: по убыванию</option>
      <option value="name-asc">Название: А–Я</option>
      <option value="name-desc">Название: Я–А</option>
    </select>
  </aside>
</div>

</main>


<script>
  function sortProducts() {
    const container = document.getElementById('products');
    const cards = Array.from(container.children);
    const sortValue = document.getElementById('sort').value;

    let sortedCards = [...cards];

    if (sortValue === 'price-asc') {
      sortedCards.sort((a, b) => a.dataset.price - b.dataset.price);
    }
    if (sortValue === 'price-desc') {
      sortedCards.sort((a, b) => b.dataset.price - a.dataset.price);
    }
    if (sortValue === 'name-asc') {
      sortedCards.sort((a, b) => a.dataset.name.localeCompare(b.dataset.name));
    }
    if (sortValue === 'name-desc') {
      sortedCards.sort((a, b) => b.dataset.name.localeCompare(a.dataset.name));
    }

    container.innerHTML = '';
    sortedCards.forEach(card => container.appendChild(card));
  }
</script>

</body>
</html>
